        <li><a ui-sref="login">Log In</a></li>
        <li><a ui-sref="signup">Sign Up</a></li>
      </ul>
      <ul id="logged-in-dropdown" class="dropdown-content">
        <li><strong><p class="center-align">{{navCtrl.getUser().name}}</p></strong></li>
        <li class="divider"></li>
        <li><a ng-click="navCtrl.logout()">Log Out</a></li>
      </ul>

      <ul id="nav-mobile" class="side-nav">
        <li ng-hide="navCtrl.isLoggedIn()"><a ui-sref="login">Log In</a></li>
        <li ng-hide="navCtrl.isLoggedIn()"><a ui-sref="signup">Sign Up</a></li>
        <li ng-show="navCtrl.isLoggedIn()" ui-sref-active="active">
          <span ng-show="navCtrl.addNotification" id="notification-bubble"></span>
          <a id="my-schools-link" ui-sref="favorite-schools">My Schools</a>
        </li>
        <li ng-show="navCtrl.isLoggedIn()" ui-sref-active="active"><a ui-sref="my-posts">My Posts</a></li>
        <li ng-show="navCtrl.isLoggedIn()"><a ng-click="navCtrl.logout()">Log Out</a></li>
      </ul>
      <a href="#" data-activates="nav-mobile" class="button-collapse"><i id="menu-icon" class="material-icons" style="{{navStyle}}">menu</i></a>
    </div>
  </nav>

