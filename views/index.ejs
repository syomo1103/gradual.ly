          <a id="my-schools-link" ui-sref="favorite-schools" style="{{navStyle}}">My Schools</a>
        </li>
        <li ng-show="navCtrl.isLoggedIn()" ui-sref-active="active"><a ui-sref="my-posts" style="{{navStyle}}">My Posts</a></li>
        <li ng-hide="navCtrl.isLoggedIn()"><a style="{{navStyle}}" class="dropdown-button" href="#!" data-activates="logged-out-dropdown"><i class="material-icons right">perm_identity</i></a></li>
